<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioButtonActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Radio Button Demo"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a city"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RadioGroup
        android:id="@+id/cityRG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:checkedButton="@id/bomR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityT">

        <RadioButton
            android:id="@+id/blrR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="Bangalore" />

        <RadioButton
            android:id="@+id/bomR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="Mumbai" />

        <RadioButton
            android:id="@+id/chennaiR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="Chennai" />

        <RadioButton
            android:id="@+id/hydR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="Hyderabad" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>